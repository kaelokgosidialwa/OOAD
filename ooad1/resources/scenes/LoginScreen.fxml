<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" fillWidth="true" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ooad1.LoginScreenController">

    <!-- Menu Bar -->
    <MenuBar fx:id="menumain" VBox.vgrow="NEVER">
        <menus>
            <Menu fx:id="backmain" mnemonicParsing="false" text="Back">
                <items>
                    <MenuItem fx:id="prevmain" mnemonicParsing="false" onAction="#PrevScene" text="Previous Scene" />
                    <MenuItem fx:id="tologinmain" mnemonicParsing="false" onAction="#BackToLogin" text="Log Out" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Main content in a StackPane for centering -->
    <StackPane prefHeight="400" prefWidth="640" VBox.vgrow="ALWAYS">
        <children>
            <VBox alignment="CENTER" spacing="20">
                <Text text="Banking System v0.1" textAlignment="CENTER" wrappingWidth="400">
                    <font>
                        <Font name="Broadway" size="32" />
                    </font>
                </Text>

                <Button fx:id="logBrnch" maxWidth="200" onAction="#LoginBranch" prefHeight="40" text="Login as Branch">
                    <font>
                        <Font name="Bookshelf Symbol 7" size="18" />
                    </font>
                </Button>

                <Button fx:id="LogCus" maxWidth="200" onAction="#LoginCustomer" prefHeight="40" text="Login as Customer">
                    <font>
                        <Font name="Bookshelf Symbol 7" size="18" />
                    </font>
                </Button>
            <Button fx:id="signup" layoutX="230.0" layoutY="249.0" maxWidth="200" onAction="#SignUp" prefHeight="40" text="..Or Sign Up">
               <font>
                  <Font name="Bookshelf Symbol 7" size="18" />
               </font>
            </Button>
            </VBox>
        </children>
    </StackPane>
</VBox>

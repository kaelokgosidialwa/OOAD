<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" fillWidth="true" spacing="20" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ooad1.BranchMainController">

    <!-- Menu Bar -->
    <MenuBar fx:id="menumain" VBox.vgrow="NEVER">
        <menus>
            <Menu fx:id="backmain" mnemonicParsing="false" text="Back">
                <items>
                    <MenuItem fx:id="prevmain" mnemonicParsing="false" onAction="#PrevScene" text="Previous Scene"/>
                    <MenuItem fx:id="tologinmain" mnemonicParsing="false" onAction="#BackToLogin" text="Log Out"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Branch header -->
    <Text fx:id="BranchLabel" text="Logged In as Branch:" textAlignment="CENTER" wrappingWidth="600">
        <font>
            <Font name="Broadway" size="28"/>
        </font>
    </Text>

    <!-- Account Management Panel -->
    <VBox alignment="CENTER" spacing="15">
        <ComboBox fx:id="accountSelector" promptText="Select an account..." prefWidth="400"/>
        
        <GridPane hgap="10" vgap="10">
            <Label text="Account Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="accountNumberLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Account Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="accountTypeLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Balance:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="accountBalanceLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Customer ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="accountCustomerLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="depositButton" text="Deposit" onAction="#handleDeposit" prefWidth="100"/>
            <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdraw" prefWidth="100"/>
            <Button fx:id="closeButton" text="Close Account" onAction="#handleCloseAccount" prefWidth="120"/>
            <Button fx:id="payInterestButton" text="Pay Interest" onAction="#handlePayInterest" prefWidth="120"/>
        </HBox>
    </VBox>

    <!-- Branch Options -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="SearchButton" text="Search Users/Accounts" onAction="#goToSearchDatabase" prefWidth="200" prefHeight="50"/>
        <Button fx:id="createAccount" text="Create A New Account" onAction="#createAccount" prefWidth="200" prefHeight="50"/>
        <Button fx:id="BranchInfoButton" text="Branch Info" onAction="#seeBranchInfo" prefWidth="200" prefHeight="50"/>
    </HBox>
</VBox>
